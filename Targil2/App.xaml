<Application x:Class="Targil2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Targil2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="Image">
            
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="Resources/door open.jpg"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                        <Setter Property="Source" Value="Resources/door closed.jpg"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Text" Value="נסראללה">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
