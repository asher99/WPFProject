<Window x:Class="Flower_pl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flower_pl"
        mc:Ignorable="d"
        Title="כניסה" Height="350" Width="525">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Content="מאגר הצמחים" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
        <Label Content=":הזן את שם הצמח המבוקש" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="30"/>
        <TextBox x:Name="textBoxFlower" Grid.Row="2" TextWrapping="Wrap" Margin="0,-55,0,0" Width="200" Height="50"/>
        <Button Content="הכנס" Click="Button_Click" FontSize="15" Background="AntiqueWhite" Grid.Row="2" Margin="0,80,0,0" Height="40" Width="100"/>

    </Grid>
</Window>
